@model List<RelatorioModel>
@{
    ViewData["Title"] = "Relatório";
}


<div class="text-center">

    <h1>@ViewData["Title"]</h1>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Bomba</th>
                <th scope="col">Combustível</th>
                <th scope="col">Valor</th>
                <th>tipo de pagamento</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
           @if (Model != null && Model.Any())
            {
                foreach (RelatorioModel relatorio in Model)
                {
                    <tr>
                        <th scope="row">@relatorio.Id</th>
                        <td>@relatorio.Bomba</td>
                        <td>@relatorio.Combustivel</td>
                        <td>@relatorio.Valor</td>
                        <td>@relatorio.Pagamento</td>
                        <td>
                            <div class="btn-group">
                                <a role="button" class="btn btn-primary active" asp-route-id="@relatorio.Id" asp-asp-controller="Home" asp-action="Editar">Editar</a>
                                <a role="button" class="btn btn-danger" asp-route-id="@relatorio.Id" asp-asp-controller="Home" asp-action="ApagarConfirmacao">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }

            }

        </tbody>
    </table>
</div>


<p>Use this page to detail your site's privacy policy.</p>
